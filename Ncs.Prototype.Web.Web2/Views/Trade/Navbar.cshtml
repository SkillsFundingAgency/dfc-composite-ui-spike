@{
    ViewData["Title"] = "Navbar";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-tabs" data-module="tabs">
            <h2 class="govuk-tabs__title">
                Trades
            </h2>

            <ul class="govuk-tabs__list">
                <li class="govuk-tabs__list-item">
                    <a class="govuk-tabs__tab" asp-area="" asp-controller="Trade" asp-action="Index" asp-route-filter="All">
                        All Trades
                    </a>
                </li>
                <li class="govuk-tabs__list-item">
                    <a class="govuk-tabs__tab" asp-area="" asp-controller="Trade" asp-action="Index" asp-route-filter="16Plus">
                        Aged 16+
                    </a>
                </li>
                <li class="govuk-tabs__list-item">
                    <a class="govuk-tabs__tab" asp-area="" asp-controller="Trade" asp-action="Index" asp-route-filter="18Plus">
                        Aged 18+
                    </a>
                </li>
                <li class="govuk-tabs__list-item">
                    <a class="govuk-tabs__tab" asp-area="" asp-controller="Trade" asp-action="Index" asp-route-filter="21Plus">
                        Aged 21+
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
